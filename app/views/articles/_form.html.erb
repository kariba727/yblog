<%= form_for @article do |f|%>
  <% if @article.errors.any? %>
    <%= @article.errors.count %>個のエラーがあります<br>
    <% end %>
    <%= f.text_field :title %><br>
    <%= f.text_area :text %><br>
    <%= f.label :画像 %><br />
    <%= f.file_field :img, class: "image" %>
    <p><%= f.check_box :remove_img %>画像を削除する</p>
    <%= f.submit %>
<% end %>